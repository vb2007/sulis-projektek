@page
@model Allatmenhely.WebApp.Pages.ChangePasswordModel
@{
    ViewData["Title"] = "Jelszó megváltoztatása";
}

<div class="row justify-content-center">
    <div class="col-md-6">
        <h2 class="mb-4">Jelszó megváltoztatása</h2>

        @if (!string.IsNullOrEmpty(Model.ErrorMessage))
        {
            <div class="alert alert-danger" role="alert">
                @Model.ErrorMessage
            </div>
        }

        @if (!string.IsNullOrEmpty(Model.SuccessMessage))
        {
            <div class="alert alert-success" role="alert">
                @Model.SuccessMessage
            </div>
        }

        <form method="post">
            <div class="mb-3">
                <label for="CurrentPassword" class="form-label">Jelenlegi jelszó <span class="text-danger">*</span></label>
                <input type="password" class="form-control" id="CurrentPassword" name="CurrentPassword" required>
            </div>

            <div class="mb-3">
                <label for="NewPassword" class="form-label">Új jelszó <span class="text-danger">*</span></label>
                <input type="password" class="form-control" id="NewPassword" name="NewPassword" required>
                <div class="form-text">Minimum 6 karakter.</div>
            </div>

            <div class="mb-3">
                <label for="ConfirmNewPassword" class="form-label">Új jelszó megerősítése <span class="text-danger">*</span></label>
                <input type="password" class="form-control" id="ConfirmNewPassword" name="ConfirmNewPassword" required>
            </div>

            <div class="d-grid gap-2">
                <button type="submit" class="btn btn-primary">Jelszó megváltoztatása</button>
                <a asp-page="/Profile" class="btn btn-secondary">Vissza a profilodra</a>
            </div>
        </form>
    </div>
</div>
