@page
@model Allatmenhely.WebApp.Pages.Animals.IndexModel
@{
    ViewData["Title"] = "Állatok";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2>Állatok</h2>
    @if (Model.IsAdmin)
    {
        <div>
            <a asp-page="/Animals/Create" class="btn btn-success">Új állat hozzáadása</a>
            <a asp-page="/Species/Index" class="btn btn-secondary">Fajok kezelése</a>
            <a asp-page="/Breeds/Index" class="btn btn-secondary">Fajták kezelése</a>
        </div>
    }
</div>

@if (!Model.Animals.Any())
{
    <div class="alert alert-info">
        Jelenleg egy állat adata sincs eltárolva.
    </div>
}
else
{
    <div class="row">
        @foreach (var animal in Model.Animals)
        {
            <div class="col-md-4 mb-4">
                <div class="card h-100">
                    @if (!string.IsNullOrEmpty(animal.ImageUrl))
                    {
                        <img src="@animal.ImageUrl" class="card-img-top" alt="@animal.Name" style="height: 250px; object-fit: cover;">
                    }
                    else
                    {
                        <div class="card-img-top bg-secondary d-flex align-items-center justify-content-center" style="height: 250px;">
                            <span class="text-white">Nincs kép</span>
                        </div>
                    }
                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title">@animal.Name</h5>
                        <p class="card-text">
                            <strong>Faj:</strong> @animal.Species.Name<br />
                            <strong>Fajta:</strong> @animal.Breed.Name
                        </p>
                        @if (!string.IsNullOrEmpty(animal.Description))
                        {
                            <p class="card-text">@animal.Description</p>
                        }
                        <div class="mt-auto">
                            @if (Model.IsAdmin)
                            {
                                <div class="d-flex gap-2 flex-wrap">
                                    <a asp-page="/Animals/Edit" asp-route-id="@animal.Id" class="btn btn-primary btn-sm">Szerkesztés</a>
                                    <a asp-page="/Appointments/Manage" asp-route-animalId="@animal.Id" class="btn btn-warning btn-sm">Időpontok kezelése</a>
                                </div>
                            }
                            else
                            {
                                <a asp-page="/Animals/Details" asp-route-id="@animal.Id" class="btn btn-info btn-sm">Részletek</a>
                                <a asp-page="/Appointments/Booking" asp-route-animalId="@animal.Id" class="btn btn-primary btn-sm">Időpont foglalása</a>
                            }
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
}
