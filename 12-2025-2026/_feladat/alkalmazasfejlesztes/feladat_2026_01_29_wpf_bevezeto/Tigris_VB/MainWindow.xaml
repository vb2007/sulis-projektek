<Window x:Class="Tigris_VB.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Tigris_VB"
        mc:Ignorable="d"
        Title="Tigrisek" Height="450" Width="800"
        Icon="/tiger-icon.png">
    <Window.Background>
        <ImageBrush ImageSource="/csikok.png"/>
    </Window.Background>
    <DockPanel Margin="10,10,10,10">
        <Border DockPanel.Dock="Top" Height="80" CornerRadius="10" Margin="10,10,10,10">
            <Border.Background>
                <RadialGradientBrush>
                    <GradientStop Color="Black" Offset="0"></GradientStop>
                    <GradientStop Color="White" Offset="1"></GradientStop>
                </RadialGradientBrush>
            </Border.Background>
            <TextBox Background="{x:Null}" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="36" FontFamily="Comic Sans MS" FontWeight="Bold" Foreground="White" Text="Tigrisek" BorderBrush="{x:Null}"/>
        </Border>
        <Border DockPanel.Dock="Bottom" Height="30" CornerRadius="10" Margin="10,10,10,10" BorderBrush="White" Background="Black" BorderThickness="1,1,1,1">
            <TextBox Background="{x:Null}" BorderBrush="{x:Null}" Foreground="White" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="18" Text="Készítette: Vágvölgyi Balázs"/>
        </Border>
        <Border DockPanel.Dock="Left" Background="Black" Margin="10,10,10,10" Padding="10,10,10,10" CornerRadius="10,10,10,10">
            <StackPanel>
                <TextBlock FontSize="18" Foreground="White" Text="Rendszertani besorolás"/>
                <Separator/>
                <TextBlock Foreground="White" Text="Ország: Állatok"/>
                <Separator/>
                <TextBlock Foreground="White" Text="Törzs: Gerinchúrosok"/>
                <Separator/>
                <TextBlock Foreground="White" Text="Osztály: Emlősök"/>
                <Separator/>
                <TextBlock Foreground="White" Text="Rend: Ragadozók"/>
                <Separator/>
                <TextBlock Foreground="White" Text="Család: Macskafélék"/>
                <Separator/>
                <TextBlock Foreground="White" Text="Alcsalád: Párducformák"/>
                <Separator/>
            </StackPanel>
        </Border>
        <Border DockPanel.Dock="Top" Background="Black" CornerRadius="10" Margin="10,10,10,0" Padding="5,5,5,5">
            <TextBox Background="{x:Null}" BorderBrush="{x:Null}" VerticalAlignment="Center" HorizontalAlignment="Center" Text="Alfajok" Foreground="White" FontSize="18"></TextBox>
        </Border>
        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <WrapPanel>
                <StackPanel Background="White" Margin="5,5,5,5">
                    <Image Width="150" Margin="10,10,10,0" Source="/bengali.jpg"></Image>
                    <TextBlock HorizontalAlignment="Center" Padding="10,5,10,5" Text="Bengáli tigris"/>
                </StackPanel>
                <StackPanel Background="White" Margin="5,5,5,5">
                    <Image Width="150" Margin="10,10,10,0" Source="/sziberiai.jpg"></Image>
                    <TextBlock HorizontalAlignment="Center" Padding="10,5,10,5" Text="Szibériai tigris"/>
                </StackPanel>
                <StackPanel Background="White" Margin="5,5,5,5">
                    <Image Width="150" Margin="10,10,10,0" Source="/malaj.jpg"></Image>
                    <TextBlock HorizontalAlignment="Center" Padding="10,5,10,5" Text="Maláj tigris"/>
                </StackPanel>
            </WrapPanel>
        </ScrollViewer>
    </DockPanel>
</Window>
