@page
@model Allatmenhely.WebApp.Pages.Animals.EditModel
@{
    ViewData["Title"] = "Állat szerkesztése";
}

<div class="row justify-content-center">
    <div class="col-md-8">
        <h2 class="mb-4">Állat szerkesztése</h2>

        @if (!string.IsNullOrEmpty(Model.ErrorMessage))
        {
            <div class="alert alert-danger" role="alert">
                @Model.ErrorMessage
            </div>
        }

        @if (!string.IsNullOrEmpty(Model.SuccessMessage))
        {
            <div class="alert alert-success" role="alert">
                @Model.SuccessMessage
            </div>
        }

        <form method="post">
            <input type="hidden" name="Id" value="@Model.Id" />

            <div class="mb-3">
                <label for="Name" class="form-label">Név <span class="text-danger">*</span></label>
                <input type="text" class="form-control" id="Name" name="Name" value="@Model.Name" required>
            </div>

            <div class="mb-3">
                <label for="SpeciesId" class="form-label">Faj <span class="text-danger">*</span></label>
                <select class="form-select" id="SpeciesId" name="SpeciesId" required>
                    <option value="">-- Válassz fajt --</option>
                    @foreach (var species in Model.SpeciesList)
                    {
                        <option value="@species.Value" selected="@(species.Value == Model.SpeciesId.ToString())">@species.Text</option>
                    }
                </select>
            </div>

            <div class="mb-3">
                <label for="BreedId" class="form-label">Fajta <span class="text-danger">*</span></label>
                <select class="form-select" id="BreedId" name="BreedId" required>
                    <option value="">-- Válassz fajtát --</option>
                    @foreach (var breed in Model.BreedsList)
                    {
                        <option value="@breed.Value" selected="@(breed.Value == Model.BreedId.ToString())">@breed.Text</option>
                    }
                </select>
            </div>

            <div class="mb-3">
                <label for="Description" class="form-label">Leírás</label>
                <textarea class="form-control" id="Description" name="Description" rows="4">@Model.Description</textarea>
            </div>

            <div class="mb-3">
                <label for="ImageUrl" class="form-label">Kép URL</label>
                <input type="url" class="form-control" id="ImageUrl" name="ImageUrl" value="@Model.ImageUrl">
                <div class="form-text">Adj meg egy URL-t, ami az állat képéhez vezet.</div>
            </div>

            <div class="d-grid gap-2">
                <button type="submit" class="btn btn-primary">Adatok frissítése</button>
                <a asp-page="/Appointments/Manage" asp-route-animalId="@Model.Id" class="btn btn-warning">Időpontok kezelése</a>
                <a asp-page="/Animals/Index" class="btn btn-secondary">Vissza az összes állathoz</a>
            </div>
        </form>

        <div class="card border-danger mt-4">
            <div class="card-body">
                <h5 class="card-title text-danger">Veszélyzóna</h5>
                <p class="card-text">Az állat törlése minden hozzá foglalt időpontot is véglegesen törölni fog.</p>
                <button type="button" class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#deleteAnimalModal">
                    Állat törlése
                </button>
            </div>
        </div>

        <div class="modal fade" id="deleteAnimalModal" tabindex="-1" aria-labelledby="deleteAnimalModalLabel" aria-hidden="true">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header bg-danger text-white">
                        <h5 class="modal-title" id="deleteAnimalModalLabel">Állat törlése</h5>
                        <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                        <p class="mb-2">Biztos törölni szeretnéd az állatot?</p>
                        <p class="mb-0 text-danger"><strong>A művelet végleges és minden hozzá foglalt időpontot is törölni fog!</strong></p>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Mégse</button>
                        <form method="post" asp-page-handler="Delete" class="d-inline">
                            <input type="hidden" name="Id" value="@Model.Id" />
                            <button type="submit" class="btn btn-danger">Törlés</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
