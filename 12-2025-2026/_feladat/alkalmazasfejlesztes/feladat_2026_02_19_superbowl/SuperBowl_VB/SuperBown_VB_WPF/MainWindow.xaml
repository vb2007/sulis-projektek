<Window x:Class="SuperBown_VB_WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SuperBown_VB_WPF"
        mc:Ignorable="d"
        Title="Átváltó" Height="250" Width="550">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <StackPanel Grid.Column="0" VerticalAlignment="Center" HorizontalAlignment="Center">
            <Label Content="Római szám [I-X]:" HorizontalAlignment="Center" Margin="5"/>
            <TextBox x:Name="tbRomai" Width="120" Height="40" FontSize="20" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
        </StackPanel>

        <StackPanel Grid.Column="1" VerticalAlignment="Center" HorizontalAlignment="Center">
            <Button x:Name="btnIrany" Content="---&gt;" Width="80" Height="40" Margin="10,5" Click="btnIrany_Click"/>
            <Button x:Name="btnAtvalt" Content="Átvált" Width="80" Height="40" Margin="10,5" Click="btnAtvalt_Click"/>
        </StackPanel>

        <StackPanel Grid.Column="2" VerticalAlignment="Center" HorizontalAlignment="Center">
            <Label Content="Arab szám [1-10]:" HorizontalAlignment="Center" Margin="5"/>
            <TextBox x:Name="tbArab" Width="120" Height="40" FontSize="20" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" IsEnabled="False"/>
        </StackPanel>
    </Grid>
</Window>

