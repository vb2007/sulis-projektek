<Window x:Class="Sudoku_VB_GUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Sudoku_VB_GUI"
        mc:Ignorable="d"
        Title="Sudoku-ellenörző" Height="210" Width="540">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,10">
            <TextBlock Text="Új feladvány mérete:" VerticalAlignment="Center" Margin="0,0,10,0"/>
            <Button Name="btnMinus" Content="-" Width="25" Height="25" Margin="0,0,5,0" Click="BtnMinus_Click"/>
            <TextBox Name="txtMeret" Width="50" Height="25" TextAlignment="Center" IsReadOnly="True" Text="4" Margin="0,0,5,0"/>
            <Button Name="btnPlus" Content="+" Width="25" Height="25" Click="BtnPlus_Click"/>
        </StackPanel>
        <TextBlock Grid.Row="1" Text="Kezdőállapot:" Margin="0,0,0,5"/>
        <TextBox Grid.Row="2" Name="txtKezdoAllapot" 
                 AcceptsReturn="True" 
                 TextWrapping="Wrap" 
                 VerticalScrollBarVisibility="Auto"
                 Height="60"
                 Margin="0,0,0,5"
                 TextChanged="TxtKezdoAllapot_TextChanged"/>
        <TextBlock Grid.Row="3" Name="lblHossz" Text="Hossz: 0" VerticalAlignment="Top" Margin="0,5,0,0"/>
        <Button Grid.Row="4" Name="btnEllenorzes" 
                Content="Ellenőrzés" 
                Width="100" 
                Height="30" 
                HorizontalAlignment="Right" 
                VerticalAlignment="Bottom"
                Click="BtnEllenorzes_Click"/>
    </Grid>
</Window>
